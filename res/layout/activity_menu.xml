<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/listTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dark" >
    </TextView>

    <TextView
        android:id="@+id/listTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dark" >
    </TextView>

    <TextView
        android:id="@+id/listTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telephone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dark" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/displaymapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_btn_press"
            android:text="@string/displaymap"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/callButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_btn_press"
            android:text="@string/callPhone"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/favorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/star"
            android:padding="0dip"
            android:src="@drawable/selector" />
    </LinearLayout>

</LinearLayout>